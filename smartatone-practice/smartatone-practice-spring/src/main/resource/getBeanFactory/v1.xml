<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd
       ">

    <bean id="person" class="com.smartatone.getBeanFactory.Person">
        <property name="name" value="java"/>
    </bean>

    <!--beanFactoryAware方式-->
    <bean id="beanUtils1" class="com.smartatone.getBeanFactory.BeanFactoryAware_BeanUtils"/>

    <bean id="beanUtils2" class="com.smartatone.getBeanFactory.ApplicationContextAware_BeanUtils"/>

    <bean id="beanUtils3" class="com.smartatone.getBeanFactory.ApplicationListener_BeanUtils"/>

</beans>