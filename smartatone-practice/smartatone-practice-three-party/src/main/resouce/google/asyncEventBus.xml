<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd
       ">


    <bean id="asyncEventBusExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="threadNamePrefix" value=""/>
        <property name="corePoolSize" value="10"/>
        <property name="maxPoolSize" value="30"/>
        <property name="queueCapacity" value="10000"/>
    </bean>

    <bean id="asyncEventBus" class="com.google.common.eventbus.AsyncEventBus">
        <constructor-arg ref="asyncEventBusExecutor"/>
    </bean>

    <bean id="demoEventListener1" class="com.smartatone.google.eventBus.asyncEventBus.DemoEventListener1"/>
    <bean id="demoEventListener2" class="com.smartatone.google.eventBus.asyncEventBus.DemoEventListener2"/>

</beans>